<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="widgetBackground">@color/selectable_item_background_normal</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_pressed</item>
        <item name="widgetBackgroundTitle">?attr/colorPrimary</item>
        <item name="android:listDivider">@color/listDividerColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!--浸入式状态栏-->
    <style name="AppTheme.Immersive" parent="AppTheme"/>

    <!--全屏-->
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--NavigationView以及TabLayout的字体大小-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <!--水平线-->
    <style name="HorizontalLine">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--垂直线-->
    <style name="VerticalLine">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">1px</item>
    </style>
</resources>
